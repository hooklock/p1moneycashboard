<h2>Transactions for <b><i><%= @merchant.mer_name() %></i></b></h2>

<table border="1" style="width:50%">
  <tr align="left">
    <th>Date</th>
    <th>Type</th>
    <th>Description</th>
    <th style="text-align:right">Amount</th>
  </tr>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.nice_date(purchase.pur_date) %></td>
      <td><%= purchase.category.cat_name %></td>
      <td><%= purchase.description %></td>
      <td style="text-align:right">£<%= '%.2f'% purchase.pur_amount %></td>
    </tr>
  <% end %>
  <tfooter>
    <tr>
      <td><b>Total Spent</b></td>
      <td colspan="4" style="text-align:right"><b>£<%= '%.2f'% @analysis.total_by_type(@merchant.id) %></b></td>
    </tr>
  </tfooter>
</table>


